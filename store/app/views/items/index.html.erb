<h1> Товари </h1>
<body>
<% if @items.empty? %>
	<b> No items in store </b>
<% else %>
<table>
<tr>
	<th>ID</th>
	<th>Name</th>
	<th>Price</th>
	<th></th>
</tr>
<% end %>

<% @items.each do |i| %>
<tr>
	<td><%= i.id %></td>
	<td><%= link_to i.name, item_path(i) %></td>
	<td><%= i.price %> UAH </td>
	<td><%= link_to "Редагувати", edit_item_path(i), data: { confirm: "Змінти?" } %></td>
	<td><%= link_to "Видалити", item_path(i), method: :delete, data: { confirm: "Видлити?" } %></td>
</tr>

<% end %>
</table>

<footer>
<big>
   <li><%= link_to "Додати товар", new_item_path(:item), data: { confirm: "Додати?" } %></li>
  </big>
  </footer>


<small>
  <a> Дата: <%= Time.now %> <a>
  </small>
  </body>