<h1> Items </h1>

<% if @items.empty? %>
	<b> No items in store </b>
<% else %>
<table>
<tr>
	<th>ID</th>
	<th>Name</th>
	<th>Price</th>
	<th></th>
</tr>
<% end %>

<% @items.each do |i| %>
<tr>
	<td><%= i.id %></td>
	<td><%= link_to i.name, item_path(i) %></td>
	<td><%= i.price %> UAH </td>
	<td><%= link_to "Редагувати", edit_item_path(i), data: { confirm: "Змінти?" } %></td>
	<td><%= link_to "Видалити", item_path(i), method: :delete, data: { confirm: "Видлити?" } %></td>
</tr>

<% end %>

<table>
<footer>
<big>
    <a href= "http://0.0.0.0:3000/items/new">Додадти новий товар</a>
  </big>
  </footer>